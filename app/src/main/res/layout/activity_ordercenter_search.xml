<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/view_navigationview"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="horizontal">
        <TextView
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="right"
            android:textSize="16sp"
            android:text="客户名称："/>
        <EditText
            android:id="@+id/senior_custom"
            android:layout_marginRight="20dip"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:padding="5dip"
            android:textSize="13sp"
            android:layout_marginLeft="10dip"
            android:background="@drawable/rectangle_corner_black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">
        <TextView
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="right"
            android:textSize="16sp"
            android:text="产品名称："/>
        <EditText
            android:id="@+id/senior_product"
            android:layout_marginRight="20dip"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:padding="5dip"
            android:textSize="13sp"
            android:layout_marginLeft="10dip"
            android:background="@drawable/rectangle_corner_black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">
        <TextView
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="right"
            android:textSize="16sp"
            android:text="订单编号："/>
        <EditText
            android:id="@+id/senior_productid"
            android:layout_marginRight="20dip"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:padding="5dip"
            android:textSize="13sp"
            android:layout_marginLeft="10dip"
            android:background="@drawable/rectangle_corner_black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">
        <TextView
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="right"
            android:textSize="16sp"
            android:text="下单时间："/>
        <TextView
            android:layout_marginRight="20dip"
            android:layout_width="90dip"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:padding="5dip"
            android:textSize="13sp"
            android:layout_marginLeft="10dip"
            android:background="@drawable/rectangle_corner_black" />
        <TextView
            android:layout_width="90dip"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:padding="5dip"
            android:textSize="13sp"
            android:layout_marginLeft="5dip"
            android:background="@drawable/rectangle_corner_black" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">
        <TextView
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="right"
            android:textSize="16sp"
            android:text="价格区间："/>
        <TextView
            android:layout_marginRight="20dip"
            android:layout_width="90dip"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:padding="5dip"
            android:textSize="13sp"
            android:layout_marginLeft="10dip"
            android:background="@drawable/rectangle_corner_black" />
        <TextView
            android:layout_width="90dip"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:padding="5dip"
            android:textSize="13sp"
            android:layout_marginLeft="5dip"
            android:background="@drawable/rectangle_corner_black" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">
        <TextView
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="right"
            android:textSize="16sp"
            android:text="分类："/>
        <TextView
            android:id="@+id/senior_classify"
            android:layout_marginRight="20dip"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:padding="5dip"
            android:textSize="13sp"
            android:layout_marginLeft="10dip"
            android:background="@drawable/rectangle_corner_black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="60dip"
        android:orientation="horizontal">
        <TextView
            android:textSize="15sp"
            android:layout_marginRight="20dip"
            android:layout_width="85dip"
            android:layout_height="30dip"
            android:background="@drawable/rectangle_background_lightgray"
            android:gravity="center"
            android:textColor="#5e5e5e"
            android:text="重置"/>
        <TextView
            android:textSize="15sp"
            android:layout_marginRight="20dip"
            android:layout_width="85dip"
            android:layout_height="30dip"
            android:background="@drawable/rectangle_background_red"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="确定"/>
    </LinearLayout>
</LinearLayout>