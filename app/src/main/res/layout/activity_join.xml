<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/view_navigationview"></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#232323">
        <ScrollView
            android:id="@+id/join_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dip"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="130dip"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:gravity="right"
                            android:textSize="16sp"
                            android:text="服务商名称："/>
                        <EditText
                            android:id="@+id/join_name"
                            android:layout_marginRight="20dip"
                            android:layout_width="match_parent"
                            android:layout_height="40dip"
                            android:gravity="center_vertical"
                            android:padding="5dip"
                            android:textSize="13sp"
                            android:layout_marginLeft="10dip"
                            android:background="@drawable/rectangle_corner_black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="130dip"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:gravity="right"
                            android:textSize="16sp"
                            android:text="所在地区："/>
                        <TextView
                            android:id="@+id/join_area"
                            android:layout_marginRight="20dip"
                            android:layout_width="match_parent"
                            android:layout_height="30dip"
                            android:gravity="center_vertical"
                            android:padding="5dip"
                            android:textSize="13sp"
                            android:textColor="#999999"
                            android:layout_marginLeft="10dip"
                            android:background="@drawable/rectangle_corner_black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="130dip"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:gravity="right"
                            android:textSize="16sp"
                            android:text="详细地址："/>
                        <EditText
                            android:id="@+id/join_address"
                            android:layout_marginRight="20dip"
                            android:layout_width="match_parent"
                            android:layout_height="30dip"
                            android:gravity="center_vertical"
                            android:padding="5dip"
                            android:textSize="13sp"
                            android:layout_marginLeft="10dip"
                            android:textColor="#999999"
                            android:background="@drawable/rectangle_corner_black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="130dip"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:gravity="right"
                            android:textSize="16sp"
                            android:text="营业执照号："/>
                        <EditText
                            android:id="@+id/join_businesslicense"
                            android:layout_marginRight="20dip"
                            android:layout_width="match_parent"
                            android:layout_height="30dip"
                            android:gravity="center_vertical"
                            android:padding="5dip"
                            android:textSize="13sp"
                            android:layout_marginLeft="10dip"
                            android:inputType="number"
                            android:textColor="#999999"
                            android:background="@drawable/rectangle_corner_black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="130dip"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:gravity="right"
                            android:textSize="16sp"
                            android:text="营业执照照片："/>
                        <ImageView
                            android:id="@+id/join_businesslicense_upload"
                            android:layout_width="80dip"
                            android:layout_height="80dip"
                            android:layout_marginLeft="10dip"
                            android:src="@mipmap/ic_launcher"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="130dip"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:gravity="right"
                            android:textSize="16sp"
                            android:text="联系人："/>
                        <EditText
                            android:id="@+id/join_contact"
                            android:layout_marginRight="20dip"
                            android:layout_width="match_parent"
                            android:layout_height="30dip"
                            android:gravity="center_vertical"
                            android:padding="5dip"
                            android:textSize="13sp"
                            android:layout_marginLeft="10dip"
                            android:inputType="number"
                            android:textColor="#999999"
                            android:background="@drawable/rectangle_corner_black" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="130dip"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:gravity="right"
                            android:textSize="16sp"
                            android:text="手机号码："/>
                        <EditText
                            android:id="@+id/join_phonenum"
                            android:layout_marginRight="20dip"
                            android:layout_width="match_parent"
                            android:layout_height="30dip"
                            android:gravity="center_vertical"
                            android:padding="5dip"
                            android:textSize="13sp"
                            android:layout_marginLeft="10dip"
                            android:inputType="number"
                            android:textColor="#999999"
                            android:background="@drawable/rectangle_corner_black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="130dip"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:gravity="right"
                            android:textSize="16sp"
                            android:text="法人姓名："/>
                        <EditText
                            android:id="@+id/legalperson"
                            android:layout_marginRight="20dip"
                            android:layout_width="match_parent"
                            android:layout_height="30dip"
                            android:gravity="center_vertical"
                            android:padding="5dip"
                            android:textSize="13sp"
                            android:layout_marginLeft="10dip"
                            android:textColor="#999999"
                            android:background="@drawable/rectangle_corner_black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="130dip"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:gravity="right"
                            android:textSize="16sp"
                            android:text="法人身份证号："/>
                        <EditText
                            android:id="@+id/idnumber"
                            android:layout_marginRight="20dip"
                            android:layout_width="match_parent"
                            android:layout_height="30dip"
                            android:gravity="center_vertical"
                            android:padding="5dip"
                            android:textSize="13sp"
                            android:layout_marginLeft="10dip"
                            android:inputType="number"
                            android:textColor="#999999"
                            android:background="@drawable/rectangle_corner_black"/>
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/join_send"
                    android:layout_width="200dip"
                    android:layout_height="40dip"
                    android:background="@drawable/rectangle_background_red"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dip"
                    android:layout_marginBottom="20dip"
                    android:textSize="15sp"
                    android:text="提交"/>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/join_join_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:background="#232323"
                android:layout_width="match_parent"
                android:layout_height="100dip">
                <Button
                    android:id="@+id/join_commit"
                    android:background="@drawable/rectangle_corner_black"
                    android:text="同意"
                    android:textSize="15sp"
                    android:layout_marginRight="20dip"
                    android:layout_width="85dip"
                    android:layout_height="30dip" />
                <Button
                    android:id="@+id/join_back"
                    android:background="@drawable/rectangle_corner_black"
                    android:text="返回"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dip"
                    android:layout_width="85dip"
                    android:layout_height="30dip" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/join_join_after"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dip"
            android:layout_marginRight="60dip"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="120dip"
                android:gravity="center_vertical"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="3dp"
                android:padding="20dip"
                android:textSize="16sp"
                android:text="您的加盟申请已经提交平台审核，预计5-7个工作日内会有专员与您联系，非常感谢"/>
            <Button
                android:id="@+id/join_backlogin"
                android:text="返回登陆页"
                android:layout_marginTop="30dip"
                android:background="@drawable/rectangle_background_red"
                android:textColor="@android:color/white"
                android:layout_width="100dip"
                android:layout_height="40dip" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
