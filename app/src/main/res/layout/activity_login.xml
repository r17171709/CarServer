<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/login_bg">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_logo"
            android:layout_gravity="center"
            android:layout_marginTop="120dip"
            android:layout_marginBottom="60dip"/>
        <EditText
            android:id="@+id/login_name"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginLeft="70dip"
            android:layout_marginRight="70dip"
            android:drawableLeft="@mipmap/ic_user"
            android:textColorHint="#a7a7a7"
            android:hint="输入手机号/会员名/会员账号"
            android:textColor="@android:color/black"
            android:padding="5dip"
            android:textSize="13sp"
            android:drawablePadding="5dip"
            android:background="@drawable/rectangle_background_white"/>
        <EditText
            android:id="@+id/login_password"
            android:layout_marginTop="20dip"
            android:layout_marginLeft="70dip"
            android:layout_marginRight="70dip"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:drawableLeft="@mipmap/ic_password"
            android:hint="输入密码"
            android:textColorHint="#a7a7a7"
            android:textColor="@android:color/black"
            android:padding="5dip"
            android:textSize="13sp"
            android:drawablePadding="5dip"
            android:background="@drawable/rectangle_background_white"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dip"
            android:layout_marginRight="60dip"
            android:layout_marginTop="10dip">
            <TextView
                android:id="@+id/login_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:padding="15dip"
                android:text="忘记登录密码?"/>
            <TextView
                android:id="@+id/login_joinserver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/white"
                android:padding="15dip"
                android:text="成为服务商"/>
        </RelativeLayout>
        <Button
            android:id="@+id/login_commit"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginTop="20dip"
            android:layout_marginLeft="70dip"
            android:layout_marginRight="70dip"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rectangle_background_red"
            android:text="登录"
            android:gravity="center"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/login_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
</RelativeLayout>
