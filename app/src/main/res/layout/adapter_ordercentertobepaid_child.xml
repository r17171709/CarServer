<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="85dip">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/ordercentertobepaid_child_image"
            android:layout_width="93dip"
            android:layout_height="62dip"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="3dip"
            android:layout_toRightOf="@id/ordercentertobepaid_child_image"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ordercentertobepaid_child_title"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:text="123123123123123123123"
                android:maxWidth="130dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ordercentertobepaid_child_sec_title"
                android:singleLine="true"
                android:textColor="#747474"
                android:layout_marginTop="3dip"
                android:text="123123123123123123123"
                android:maxWidth="130dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ordercentertobepaid_child_num"
                    android:singleLine="true"
                    android:text="x1"
                    android:textColor="#747474"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/ordercentertobepaid_child_state"
                    android:singleLine="true"
                    android:textColor="#a20000"
                    android:layout_marginLeft="10dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:layout_alignParentRight="true">
            <RelativeLayout
                android:id="@+id/ordercentertobepaid_child_normalprice_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/ordercentertobepaid_child_normalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@android:color/black"
                    android:padding="3dip"
                    android:text="100"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#949494"
                    android:layout_toLeftOf="@id/ordercentertobepaid_child_normalprice"
                    android:layout_marginRight="3dip"
                    android:layout_marginTop="3dip"
                    android:text="指导价："/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/ordercentertobepaid_child_finalprice_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/ordercentertobepaid_child_finalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:inputType="number"
                    android:textColor="@android:color/black"
                    android:padding="3dip"
                    android:text="100"/>
                <TextView
                    android:layout_toLeftOf="@id/ordercentertobepaid_child_finalprice"
                    android:textColor="#949494"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dip"
                    android:layout_marginTop="3dip"
                    android:text="成交价："/>
                <EditText
                    android:id="@+id/ordercentertobepaid_child_finalprice_edit"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@android:color/black"
                    android:layout_alignParentRight="true"
                    android:textSize="13sp"
                    android:visibility="gone"
                    android:background="@drawable/rectangle_background_lightgray"
                    android:padding="3dip"
                    android:text="100"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="3dip"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="3dip"
                    android:paddingBottom="3dip"
                    android:visibility="invisible"
                    android:background="@drawable/rectangle_corner_lightgray"
                    android:text="null"/>
                <TextView
                    android:id="@+id/ordercentertobepaid_child_changeprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="3dip"
                    android:paddingBottom="3dip"
                    android:visibility="gone"
                    android:background="@drawable/rectangle_corner_lightgray"
                    android:text="改价"/>
                <TextView
                    android:id="@+id/ordercentertobepaid_child_commitsync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="3dip"
                    android:paddingBottom="3dip"
                    android:layout_marginLeft="10dip"
                    android:visibility="gone"
                    android:background="@drawable/rectangle_corner_lightgray"
                    android:text="确认并同步"/>
                <TextView
                    android:id="@+id/ordercentertobepaid_child_commit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="3dip"
                    android:paddingBottom="3dip"
                    android:layout_marginLeft="10dip"
                    android:visibility="gone"
                    android:background="@drawable/rectangle_corner_red"
                    android:textColor="#a20000"
                    android:text="确认"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:background="#747474"
        android:layout_width="match_parent"
        android:layout_height="0.5dip">

    </View>
</LinearLayout>
