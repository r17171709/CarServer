<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/view_navigationview"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="130dip"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:gravity="right"
                android:textSize="16sp"
                android:text="上传头像：" />
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/mydata_avatar"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:layout_marginLeft="10dip"
                    android:src="@mipmap/ic_launcher"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal">
            <TextView
                android:layout_width="130dip"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="服务商名称："
                android:gravity="right"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/mydata_name"
                android:layout_marginRight="20dip"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:gravity="center_vertical"
                android:padding="5dip"
                android:textSize="13sp"
                android:layout_marginLeft="10dip"
                android:textColor="#999999"
                android:background="@drawable/rectangle_corner_black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal">
            <TextView
                android:text="联系人："
                android:layout_width="130dip"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:gravity="right"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/mydata_contactperson"
                android:layout_marginRight="20dip"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:gravity="center_vertical"
                android:padding="5dip"
                android:textSize="13sp"
                android:layout_marginLeft="10dip"
                android:textColor="#999999"
                android:background="@drawable/rectangle_corner_black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal">
            <TextView
                android:text="联系电话"
                android:layout_width="130dip"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:gravity="right"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/mydata_mobile"
                android:layout_marginRight="20dip"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:gravity="center_vertical"
                android:padding="5dip"
                android:textSize="13sp"
                android:layout_marginLeft="10dip"
                android:maxLength="11"
                android:inputType="number"
                android:textColor="#999999"
                android:background="@drawable/rectangle_corner_black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal">
            <TextView
                android:text="所在地区"
                android:layout_width="130dip"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:gravity="right"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/mydata_area"
                android:layout_marginRight="20dip"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:gravity="center_vertical"
                android:padding="5dip"
                android:textSize="13sp"
                android:layout_marginLeft="10dip"
                android:textColor="#999999"
                android:background="@drawable/rectangle_corner_black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal">
            <TextView
                android:text="详细地址"
                android:layout_width="130dip"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:gravity="right"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/mydata_address"
                android:layout_marginRight="20dip"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:gravity="center_vertical"
                android:padding="5dip"
                android:textSize="13sp"
                android:layout_marginLeft="10dip"
                android:textColor="#999999"
                android:background="@drawable/rectangle_corner_black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal">
            <TextView
                android:text="法人"
                android:layout_width="130dip"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:gravity="right"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/mydata_legal"
                android:layout_marginRight="20dip"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:gravity="center_vertical"
                android:padding="5dip"
                android:textSize="13sp"
                android:layout_marginLeft="10dip"
                android:textColor="#999999"
                android:background="@drawable/rectangle_corner_black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal">
            <TextView
                android:text="营业执照编号"
                android:layout_width="130dip"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:gravity="right"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/mydata_bussinesscode"
                android:layout_marginRight="20dip"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:gravity="center_vertical"
                android:padding="5dip"
                android:textSize="13sp"
                android:layout_marginLeft="10dip"
                android:inputType="number"
                android:textColor="#999999"
                android:background="@drawable/rectangle_corner_black" />
        </LinearLayout>
        <Button
            android:id="@+id/mydata_commit"
            android:layout_width="200dip"
            android:layout_height="40dip"
            android:layout_marginTop="50dip"
            android:layout_marginBottom="20dip"
            android:text="提交审核"
            android:textColor="@android:color/white"
            android:background="@drawable/rectangle_background_red"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>