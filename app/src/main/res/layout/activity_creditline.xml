<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white">
        <include layout="@layout/view_navigationview"></include>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="60dip">
            <EditText
                android:id="@+id/createline_edit"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="50dip"
                android:layout_marginRight="50dip"
                android:hint="输入修理厂全称|修理厂简称"
                android:textSize="13sp"
                android:drawablePadding="5dip"
                android:padding="5dip"
                android:drawableLeft="@mipmap/ic_search"
                android:background="@drawable/rectangle_background_lightgray"/>
        </LinearLayout>
        <com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/createline_swipy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:direction="both">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/createline_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/creditline_change_layout"
        android:background="#a0000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/creditline_num_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="250dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:background="@android:color/white"
            android:orientation="vertical">
            <TextView
                android:id="@+id/creditline_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="20dip"
                android:layout_marginBottom="20dip"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:text="XXXX修理厂"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dip"
                android:layout_marginRight="60dip"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="110dip"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="平台授信额度："/>
                <EditText
                    android:id="@+id/creditline_platform_num"
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:textSize="13sp"
                    android:padding="5dip"
                    android:text="1234"
                    android:inputType="number"
                    android:background="@drawable/rectangle_corner_black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dip"
                android:layout_marginRight="60dip"
                android:layout_marginTop="20dip"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="110dip"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="银行授信额度："/>
                <EditText
                    android:id="@+id/creditline_bank_num"
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:textSize="13sp"
                    android:padding="5dip"
                    android:text="1234"
                    android:inputType="number"
                    android:background="@drawable/rectangle_corner_black"/>
            </LinearLayout>
            <Button
                android:id="@+id/creditline_commit"
                android:layout_width="250dip"
                android:layout_height="40dip"
                android:layout_marginTop="30dip"
                android:textColor="@android:color/white"
                android:background="@drawable/rectangle_background_red"
                android:text="提交审核"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/creditline_result_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="250dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="@android:color/white"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/creditline_result_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_success"/>
            <TextView
                android:id="@+id/creditline_result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恭喜你提交成功"
                android:textSize="18sp"
                android:layout_marginTop="20dip"
                android:textColor="@android:color/holo_red_dark"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
