<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/view_navigationview"></include>
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">
            <LinearLayout
                android:id="@+id/ordercenter_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:background="#efefef"
                android:layout_height="60dip">
                <EditText
                    android:id="@+id/ordercenter_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_marginLeft="50dip"
                    android:layout_marginRight="50dip"
                    android:hint="输入订单编号|商品名称"
                    android:textSize="13sp"
                    android:drawablePadding="5dip"
                    android:padding="5dip"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:drawableLeft="@mipmap/ic_search"
                    android:background="@drawable/rectangle_background_lightgray"/>
            </LinearLayout>
            <com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ordercenter_swipy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:direction="both">
                <ListView
                    android:id="@+id/ordercenter_lv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ListView>
            </com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/ordercenter_change_layout"
            android:visibility="gone"
            android:background="#a0000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:background="@android:color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_margin="20dip"
                    android:textSize="18sp"
                    android:text="WARNING"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_margin="20dip"
                    android:textSize="16sp"
                    android:text="您的改价结果低于最新结算价，需要提交平台审核"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/ordercenter_change_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:text="取消"
                        android:layout_margin="20dip"
                        android:gravity="center"
                        android:padding="10dip"
                        android:background="@drawable/rectangle_corner_black"/>
                    <Button
                        android:id="@+id/ordercenter_change_commit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#a20000"
                        android:text="提交"
                        android:layout_margin="20dip"
                        android:gravity="center"
                        android:padding="10dip"
                        android:background="@drawable/rectangle_corner_black"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
