<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:id="@+id/view_toolbar_center_layout"
    android:background="#b50100">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:id="@+id/view_toolbar_center_image"
            android:layout_marginRight="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo_gray"/>
        <TextView
            android:id="@+id/view_toolbar_center_title"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="查找"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dip"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/view_toolbar_center_back"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_back_white"/>
        <TextView
            android:id="@+id/view_toolbar_center_text_back"
            android:textColor="@android:color/white"
            android:text="返回"
            android:visibility="gone"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_marginRight="15dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/view_toolbar_center_text_next"
            android:textColor="@android:color/white"
            android:text="返回"
            android:visibility="gone"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/view_toolbar_center_next"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_back_white"/>
    </LinearLayout>
</RelativeLayout>
