<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <include layout="@layout/view_navigationview"></include>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="60dip">
        <EditText
            android:id="@+id/factorapply_edit"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:layout_marginLeft="50dip"
            android:layout_marginRight="50dip"
            android:hint="输入会员全称"
            android:textSize="13sp"
            android:drawablePadding="5dip"
            android:padding="5dip"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:drawableLeft="@mipmap/ic_search"
            android:background="@drawable/rectangle_background_lightgray"/>
        <ImageView
            android:id="@+id/factorapply_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="50dip"
            android:src="@mipmap/icon_calendar"/>
    </LinearLayout>
    <View
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dip">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/factorapply_examining"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="未处理"/>
        <TextView
            android:id="@+id/factorapply_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已处理"/>
    </LinearLayout>
    <com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/factorapply_swipy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:direction="both">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/factorapply_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout>
</LinearLayout>