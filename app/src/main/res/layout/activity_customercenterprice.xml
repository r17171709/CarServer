<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <include layout="@layout/view_navigationview"></include>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal">
            <TextView
                android:layout_width="130dip"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:gravity="right"
                android:textSize="16sp"
                android:text="联系电话："/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginLeft="5dip"
                android:textColor="@android:color/holo_red_dark"/>
            <EditText
                android:id="@+id/customercenterprice_phonenum2"
                android:layout_marginRight="20dip"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:gravity="center_vertical"
                android:padding="5dip"
                android:textSize="13sp"
                android:layout_marginLeft="5dip"
                android:inputType="number"
                android:textColor="#999999"
                android:background="@drawable/rectangle_corner_black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal">
            <TextView
                android:layout_width="130dip"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:gravity="right"
                android:textSize="16sp"
                android:text="税务登记号："/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginLeft="5dip"
                android:textColor="@android:color/holo_red_dark"/>
            <EditText
                android:id="@+id/customercenterprice_taxnum"
                android:layout_marginRight="20dip"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:gravity="center_vertical"
                android:padding="5dip"
                android:textSize="13sp"
                android:layout_marginLeft="5dip"
                android:inputType="number"
                android:textColor="#999999"
                android:background="@drawable/rectangle_corner_black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal">
            <TextView
                android:layout_width="130dip"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:gravity="right"
                android:textSize="16sp"
                android:text="企业住所："/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginLeft="5dip"
                android:textColor="@android:color/holo_red_dark"/>
            <EditText
                android:id="@+id/customercenterprice_reg_address"
                android:layout_marginRight="20dip"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:padding="5dip"
                android:textSize="13sp"
                android:layout_marginLeft="5dip"
                android:textColor="#999999"
                android:background="@drawable/rectangle_corner_black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal">
            <TextView
                android:layout_width="130dip"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:gravity="right"
                android:textSize="16sp"
                android:text="开户银行："/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginLeft="5dip"
                android:textColor="@android:color/holo_red_dark"/>
            <EditText
                android:id="@+id/customercenterprice_bank"
                android:layout_marginRight="20dip"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:gravity="center_vertical"
                android:padding="5dip"
                android:textSize="13sp"
                android:layout_marginLeft="5dip"
                android:inputType="number"
                android:textColor="#999999"
                android:background="@drawable/rectangle_corner_black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal">
            <TextView
                android:layout_width="130dip"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:gravity="right"
                android:textSize="16sp"
                android:text="账号："/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginLeft="5dip"
                android:textColor="@android:color/holo_red_dark"/>
            <EditText
                android:id="@+id/customercenterprice_cardnum"
                android:layout_marginRight="20dip"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:gravity="center_vertical"
                android:padding="5dip"
                android:textSize="13sp"
                android:layout_marginLeft="5dip"
                android:inputType="number"
                android:textColor="#999999"
                android:background="@drawable/rectangle_corner_black"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/customercenterprice_commit"
        android:layout_width="200dip"
        android:layout_height="40dip"
        android:layout_marginTop="50dip"
        android:layout_marginBottom="20dip"
        android:text="提交审核"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/rectangle_background_red"/>
</LinearLayout>