<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <include layout="@layout/view_navigationview"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="130dip"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:text="账号："/>
                    <TextView
                        android:id="@+id/customercenterinfo_id"
                        android:layout_marginRight="20dip"
                        android:layout_width="match_parent"
                        android:layout_height="30dip"
                        android:gravity="center_vertical"
                        android:padding="5dip"
                        android:textSize="13sp"
                        android:layout_marginLeft="10dip"
                        android:textColor="#999999" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="130dip"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:text="会员名："/>
                    <EditText
                        android:id="@+id/customercenterinfo_name"
                        android:layout_marginRight="20dip"
                        android:layout_width="match_parent"
                        android:layout_height="30dip"
                        android:gravity="center_vertical"
                        android:padding="5dip"
                        android:textSize="13sp"
                        android:layout_marginLeft="10dip"
                        android:textColor="#999999"
                        android:background="@drawable/rectangle_corner_black" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="130dip"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:text="联系人："/>
                    <EditText
                        android:id="@+id/customercenterinfo_contact"
                        android:layout_marginRight="20dip"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:gravity="center_vertical"
                        android:padding="5dip"
                        android:textSize="13sp"
                        android:layout_marginLeft="10dip"
                        android:textColor="#999999"
                        android:background="@drawable/rectangle_corner_black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="130dip"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:text="手机号码："/>
                    <EditText
                        android:id="@+id/customercenterinfo_phonenum"
                        android:layout_marginRight="20dip"
                        android:layout_width="match_parent"
                        android:layout_height="30dip"
                        android:gravity="center_vertical"
                        android:padding="5dip"
                        android:textSize="13sp"
                        android:layout_marginLeft="10dip"
                        android:maxLength="11"
                        android:inputType="number"
                        android:textColor="#999999"
                        android:background="@drawable/rectangle_corner_black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="130dip"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:text="所在地区："/>
                    <TextView
                        android:id="@+id/customercenterinfo_area"
                        android:layout_marginRight="20dip"
                        android:layout_width="match_parent"
                        android:layout_height="30dip"
                        android:gravity="center_vertical"
                        android:padding="5dip"
                        android:textSize="13sp"
                        android:layout_marginLeft="10dip"
                        android:textColor="#999999"
                        android:background="@drawable/rectangle_corner_black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="130dip"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:text="详细地址："/>
                    <EditText
                        android:id="@+id/customercenterinfo_address"
                        android:layout_marginRight="20dip"
                        android:layout_width="match_parent"
                        android:layout_height="30dip"
                        android:gravity="center_vertical"
                        android:padding="5dip"
                        android:textSize="13sp"
                        android:layout_marginLeft="10dip"
                        android:textColor="#999999"
                        android:background="@drawable/rectangle_corner_black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="130dip"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:text="会员全称："/>
                    <EditText
                        android:id="@+id/customercenterinfo_company"
                        android:layout_marginRight="20dip"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:gravity="center_vertical"
                        android:padding="5dip"
                        android:textSize="13sp"
                        android:layout_marginLeft="10dip"
                        android:textColor="#999999"
                        android:background="@drawable/rectangle_corner_black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="130dip"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:text="营业执照号："/>
                    <EditText
                        android:id="@+id/customercenterinfo_businesslicense"
                        android:layout_marginRight="20dip"
                        android:layout_width="match_parent"
                        android:layout_height="30dip"
                        android:gravity="center_vertical"
                        android:padding="5dip"
                        android:textSize="13sp"
                        android:layout_marginLeft="10dip"
                        android:inputType="number"
                        android:textColor="#999999"
                        android:background="@drawable/rectangle_corner_black"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="130dip"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:text="营业执照："/>
                    <ImageView
                        android:id="@+id/customercenterinfo_businesslicense_photo"
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        android:src="@mipmap/ic_launcher" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="130dip"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:text="法人/经营者\n姓名："/>
                    <EditText
                        android:id="@+id/customercenterinfo_legalperson"
                        android:layout_marginRight="20dip"
                        android:layout_width="match_parent"
                        android:textColor="#999999"
                        android:layout_height="40dip"
                        android:gravity="center_vertical"
                        android:padding="5dip"
                        android:textSize="13sp"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/rectangle_corner_black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="130dip"
                        android:layout_height="50dip"
                        android:textColor="@android:color/black"
                        android:gravity="right|center_vertical"
                        android:textSize="16sp"
                        android:text="身份证号码："/>
                    <EditText
                        android:id="@+id/customercenterinfo_legalpersonid"
                        android:layout_marginRight="20dip"
                        android:layout_width="match_parent"
                        android:textColor="#999999"
                        android:layout_height="40dip"
                        android:gravity="center_vertical"
                        android:padding="5dip"
                        android:textSize="13sp"
                        android:maxLength="18"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/rectangle_corner_black"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dip"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="130dip"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:text="身份证正面："/>
                    <ImageView
                        android:id="@+id/customercenterinfo_idphoto_1"
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        android:src="@mipmap/ic_launcher" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dip"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="130dip"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:text="身份证背面："/>
                    <ImageView
                        android:id="@+id/customercenterinfo_idphoto_2"
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        android:src="@mipmap/ic_launcher" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="130dip"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:text="门头照片："/>
                    <ImageView
                        android:id="@+id/customercenterinfo_shop_photo"
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        android:src="@mipmap/ic_launcher"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="130dip"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:text="初始化\n授信额度："/>
                    <EditText
                        android:id="@+id/customercenterinfo_creditline"
                        android:layout_marginRight="20dip"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:gravity="center_vertical"
                        android:padding="5dip"
                        android:textSize="13sp"
                        android:inputType="number"
                        android:text="0"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/rectangle_corner_black"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="130dip"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:text="邮箱："/>
                    <EditText
                        android:id="@+id/customercenterinfo_email"
                        android:layout_marginRight="20dip"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:gravity="center_vertical"
                        android:padding="5dip"
                        android:textSize="13sp"
                        android:inputType="number"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/rectangle_corner_black"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="20dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="130dip"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:text="邮政编码："/>
                    <EditText
                        android:id="@+id/customercenterinfo_zipcode"
                        android:layout_marginRight="20dip"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:gravity="center_vertical"
                        android:padding="5dip"
                        android:textSize="13sp"
                        android:inputType="number"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/rectangle_corner_black"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/customercenterinfo_next"
                android:layout_width="200dip"
                android:layout_height="40dip"
                android:layout_marginTop="50dip"
                android:layout_marginBottom="20dip"
                android:text="提交审核"
                android:textColor="@android:color/white"
                android:background="@drawable/rectangle_background_red"
                android:layout_gravity="center" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>