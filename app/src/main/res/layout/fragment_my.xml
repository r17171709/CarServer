<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:background="@mipmap/me_bg"
                android:gravity="center"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/my_avatar"
                    android:src="@mipmap/me_normal"
                    android:layout_width="80dip"
                    android:layout_height="80dip" />
                <TextView
                    android:id="@+id/my_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_marginTop="10dip"
                    android:text="123123"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="80dip">
                    <ImageView
                        android:src="@mipmap/ic_monthmoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginLeft="5dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="本月应收"/>
                        <TextView
                            android:id="@+id/my_curmonthincome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dip"
                            android:textColor="#b60000"
                            android:text="123"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="0.5dip"
                    android:layout_height="match_parent"
                    android:background="#9b9b9b">

                </View>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="80dip">
                    <ImageView
                        android:src="@mipmap/ic_bzj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginLeft="5dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="保证金"/>
                        <TextView
                            android:id="@+id/my_deposit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dip"
                            android:textColor="#b60000"
                            android:text="123"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#9b9b9b">

            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dip"
                android:gravity="center_vertical"
                android:background="@android:color/white"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dip">
                    <TextView
                        android:id="@+id/my_receive_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#b60000"
                        android:textSize="22sp"
                        android:text="1000"/>
                    <TextView
                        android:layout_toRightOf="@id/my_receive_num"
                        android:id="@+id/my_receive_commit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:layout_marginTop="5dip"
                        android:textSize="14sp"
                        android:textColor="#9b9b9b"
                        android:text="确认账单"/>
                    <TextView
                        android:layout_below="@id/my_receive_num"
                        android:layout_marginTop="3dip"
                        android:id="@+id/my_receive_desp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/ic_upcode"
                        android:gravity="bottom"
                        android:text="上月应收"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#9b9b9b">

            </View>
            <RelativeLayout
                android:id="@+id/my_income_statement_layout"
                android:layout_marginTop="25dip"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="55dip">
                <ImageView
                    android:id="@+id/my_income_statement_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dip"
                    android:src="@mipmap/ic_me_center_icon1"/>
                <TextView
                    android:layout_toRightOf="@id/my_income_statement_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:textColor="@android:color/black"
                    android:text="收支明细"/>
                <ImageView
                    android:id="@+id/my_income_statement_arror"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dip"
                    android:src="@mipmap/ic_arr_right_black"/>
                <TextView
                    android:layout_toLeftOf="@id/my_income_statement_arror"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:text="查询"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#9b9b9b">

            </View>
            <RelativeLayout
                android:id="@+id/my_income_data_layout"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="55dip">
                <ImageView
                    android:id="@+id/my_income_data_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dip"
                    android:src="@mipmap/ic_me_center_icon2"/>
                <TextView
                    android:layout_toRightOf="@id/my_income_data_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:textColor="@android:color/black"
                    android:text="我的资料"/>
                <ImageView
                    android:id="@+id/my_income_data_arror"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dip"
                    android:src="@mipmap/ic_arr_right_black"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#9b9b9b">

            </View>
            <RelativeLayout
                android:id="@+id/my_income_save_layout"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="55dip">
                <ImageView
                    android:id="@+id/my_income_save_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dip"
                    android:src="@mipmap/ic_me_center_icon3"/>
                <TextView
                    android:layout_toRightOf="@id/my_income_save_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:textColor="@android:color/black"
                    android:text="账户安全"/>
                <ImageView
                    android:id="@+id/my_income_save_arror"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dip"
                    android:src="@mipmap/ic_arr_right_black"/>
                <TextView
                    android:layout_toLeftOf="@id/my_income_save_arror"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:text="修改"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#9b9b9b">

            </View>
            <RelativeLayout
                android:id="@+id/my_income_feedback_layout"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="55dip">
                <ImageView
                    android:id="@+id/my_income_feedback_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dip"
                    android:src="@mipmap/ic_me_center_icon4"/>
                <TextView
                    android:layout_toRightOf="@id/my_income_feedback_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:textColor="@android:color/black"
                    android:text="意见反馈"/>
                <ImageView
                    android:id="@+id/my_income_feedback_arror"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dip"
                    android:src="@mipmap/ic_arr_right_black"/>
                <TextView
                    android:layout_toLeftOf="@id/my_income_feedback_arror"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:text="查询"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#9b9b9b">

            </View>
            <RelativeLayout
                android:id="@+id/my_income_other_layout"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="55dip">
                <ImageView
                    android:id="@+id/my_income_other_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dip"
                    android:src="@mipmap/ic_me_center_icon5"/>
                <TextView
                    android:layout_toRightOf="@id/my_income_other_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:textColor="@android:color/black"
                    android:text="其他"/>
                <ImageView
                    android:id="@+id/my_income_other_arror"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dip"
                    android:src="@mipmap/ic_arr_right_black"/>
            </RelativeLayout>
            <Button
                android:id="@+id/myincomedata_loginout"
                android:layout_width="200dip"
                android:layout_height="40dip"
                android:layout_marginTop="20dip"
                android:layout_marginBottom="20dip"
                android:text="注销"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:background="@drawable/rectangle_background_red"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>