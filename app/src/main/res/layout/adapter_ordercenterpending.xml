<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="#747474"
        android:layout_width="match_parent"
        android:layout_height="0.5dip">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:text="订单编号："
                android:layout_marginLeft="10dip"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ordercenterpending_tid"
                android:text="0000000"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ordercenterpending_copy"
                android:text="复制"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="3dip"
                android:paddingBottom="3dip"
                android:background="@drawable/rectangle_corner_lightgray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/ordercenterpending_state"
            android:text="待确认"
            android:textColor="#a20000"
            android:textSize="13sp"
            android:layout_marginRight="10dip"
            android:layout_gravity="right|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="#747474"
        android:layout_width="match_parent"
        android:layout_height="0.5dip">

    </View>
    <LinearLayout
        android:id="@+id/adapter_ordercenterpending_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginRight="10dip"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ordercenterpending_num"
                android:text="共2件商品"
                android:textSize="12sp"
                android:layout_marginRight="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="合计："
                android:textSize="12sp"
                android:layout_marginRight="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ordercenterpending_price"
                android:text="400元"
                android:textColor="#a20000"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:background="#747474"
        android:layout_width="match_parent"
        android:layout_height="0.5dip">

    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ordercenterpending_remarks"
            android:text="备注"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="3dip"
            android:paddingBottom="3dip"
            android:background="@drawable/rectangle_corner_lightgray"
            android:layout_marginLeft="10dip"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/adapter_ordercenterpending_cancel"
            android:layout_alignParentRight="true"
            android:text="取消订单"
            android:textColor="@android:color/black"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="3dip"
            android:paddingBottom="3dip"
            android:background="@drawable/rectangle_corner_lightgray"
            android:layout_marginRight="10dip"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="#efefef"
        android:layout_width="match_parent"
        android:layout_height="10dip">

    </View>
</LinearLayout>