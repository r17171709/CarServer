<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/salesnotification_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="10dip"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/salesnotification_name"
        android:layout_toRightOf="@id/salesnotification_image"
        android:text="XXX修理厂"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="15dip"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/salesnotification_oper"
        android:layout_alignParentRight="true"
        android:text="确认处理"
        android:padding="5dip"
        android:textSize="13sp"
        android:layout_marginTop="20dip"
        android:textColor="@android:color/holo_red_dark"
        android:background="@drawable/rectangle_corner_lightgray"
        android:layout_marginRight="30dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/salesnotification_desp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/salesnotification_image"
        android:text="留言："
        android:textSize="14sp"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="15dip"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@id/salesnotification_name"/>
    <TextView
        android:id="@+id/salesnotification_time"
        android:layout_below="@id/salesnotification_oper"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dip"
        android:text="2015.1.11 11:11"
        android:textSize="12sp"
        android:layout_marginRight="30dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/salesnotification_content"
        android:layout_below="@id/salesnotification_desp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dip"
        android:background="#efefef"
        android:layout_marginTop="10dip"
        android:layout_marginRight="30dip"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="15dip"
        android:padding="10dip"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@id/salesnotification_image"
        android:text="aaaa" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@android:color/black">

    </View>
</RelativeLayout>